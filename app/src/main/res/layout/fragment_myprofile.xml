<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_myprofile_profile"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/img_myprofile_profilephoto" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:gravity=""
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_myprofile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름" />

            <TextView
                android:id="@+id/tv_myprofile_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="작가명" />

            <TextView
                android:id="@+id/tv_myprofile_follownum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" N follwers · N following " />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_myprofile_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:background="@drawable/btn_myprofile_border"
                    android:text="프로필 편집"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_myprofile_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/btn_myprofile_border"
                    android:text="내 지갑" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="28dp"
        android:background="#F5F5F5"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_myprofile_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="소개글 안녕하세요!!"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insta"></TextView>

        <TextView
            android:id="@+id/tv_myprofile_instaid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="인스타 아이디"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Git"></TextView>

        <TextView
            android:id="@+id/tv_myprofile_gitid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디"></TextView>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <GridLayout
            android:id="@+id/post_myprofile_gl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3">

            <ImageButton
                android:id="@+id/ibtn_myprofile_myrecord1"
                android:src="@drawable/img_myprofile_record" />

            <ImageButton
                android:id="@+id/ibtn_myprofile_myrecord2"
                android:src="@drawable/img_myprofile_record" />

            <ImageButton
                android:id="@+id/ibtn_myprofile_myrecord3"
                android:src="@drawable/img_myprofile_record" />

            <ImageButton
                android:id="@+id/ibtn_myprofile_myrecord4"
                android:src="@drawable/img_myprofile_record" />

            <ImageButton
                android:id="@+id/ibtn_myprofile_myrecord5"
                android:src="@drawable/img_myprofile_record" />

            <ImageButton
                android:id="@+id/ibtn_myprofile_myrecord6"
                android:src="@drawable/img_myprofile_record" />

            <ImageButton
                android:id="@+id/ibtn_myprofile_myrecord7"
                android:src="@drawable/img_myprofile_record" />

            <ImageButton
                android:id="@+id/ibtn_myprofile_myrecord8"
                android:src="@drawable/img_myprofile_record" />

            <ImageButton
                android:id="@+id/ibtn_myprofile_myrecord9"
                android:src="@drawable/img_myprofile_record" />

            <ImageButton
                android:id="@+id/ibtn_myprofile_myrecord10"
                android:src="@drawable/img_myprofile_record" />

            <ImageButton
                android:id="@+id/ibtn_myprofile_myrecord11"
                android:src="@drawable/img_myprofile_record" />

            <ImageButton
                android:id="@+id/ibtn_myprofile_myrecord12"
                android:src="@drawable/img_myprofile_record" />

            <ImageButton
                android:id="@+id/ibtn_myprofile_myrecord13"
                android:src="@drawable/img_myprofile_record" />
        </GridLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_myprofile_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"

        android:layout_marginBottom="15dp"
        android:text="기록하기"
        android:background="@drawable/btn_myprofile_border"/>


</LinearLayout>

